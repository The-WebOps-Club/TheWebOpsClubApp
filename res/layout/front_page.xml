<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText1"
        android:layout_toLeftOf="@+id/signup"
        android:ems="10"
        android:hint="enter your password "
        android:inputType="textPassword"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Forgot your password?" />

    <Button
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#3090C7"
        android:minHeight="24dip"
        android:minWidth="32dip"
        android:text="Sign Up"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/Newsletters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feedback"
        android:layout_toLeftOf="@+id/signup"
        android:background="#3090C7"
        android:text="NewsLetters"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/feedback"
        android:layout_alignBottom="@+id/feedback"
        android:layout_toLeftOf="@+id/textView1"
        android:background="#3090C7"
        android:text="Home"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/Share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText1"
        android:layout_alignLeft="@+id/editText2"
        android:layout_marginBottom="37dp"
        android:background="#3090C7"
        android:text="Share"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText2"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="enter your email-id"
        android:inputType="textEmailAddress"
        android:textSize="16sp" />

    <Button
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/feedback"
        android:layout_alignBottom="@+id/feedback"
        android:layout_alignParentRight="true"
        android:layout_marginRight="41dp"
        android:background="#3090C7"
        android:text="About"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Share"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:background="#3090C7"
        android:text="FeedBack"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText2"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@+id/Share"
        android:background="#3090C7"
        android:text="Log In"
        android:textColor="#FFFFFF" />

</RelativeLayout>