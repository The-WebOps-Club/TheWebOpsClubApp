<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/ideas_i"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Enter your idea here" />

    <EditText
        android:id="@+id/ideas_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ideas_i"
        android:layout_centerHorizontal="true"
        android:ems="50" />

    <TextView
        android:id="@+id/name_i"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ideas_id"
        android:layout_centerHorizontal="true"
        android:text="Student name" />

    <EditText
        android:id="@+id/name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/roll_id"
        android:layout_below="@+id/name_i"
        android:ems="10"
        android:inputType="textPersonName" >
    </EditText>

    <TextView
        android:id="@+id/roll_i"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_id"
        android:layout_centerHorizontal="true"
        android:text="Roll no." />

    <EditText
        android:id="@+id/roll_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/roll_i"
        android:layout_centerHorizontal="true"
        android:ems="10" />

    <TextView
        android:id="@+id/email_i"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/roll_i"
        android:layout_below="@+id/roll_id"
        android:text="Email Id" />

    <EditText
        android:id="@+id/email_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_i"
        android:layout_centerHorizontal="true"
        android:ems="20" />

    <Button
        android:id="@+id/submit_i"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ideas_i"
        android:layout_below="@+id/email_id"
        android:layout_marginTop="89dp"
        android:text="Submit the idea"
         android:background="#3090C7"
       android:textColor="#FFFFFF" />

</RelativeLayout>
